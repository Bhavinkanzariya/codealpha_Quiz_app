<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".easy">



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f84"
        app:cardBackgroundColor="#E91E63"
        app:cardCornerRadius="20dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center">

     <androidx.cardview.widget.CardView
         android:layout_width="150dp"
         android:layout_height="100dp"
         app:cardCornerRadius="200dp">

         <TextView
             android:id="@+id/timer"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="20"
             android:textSize="40dp"
             android:gravity="center"/>
     </androidx.cardview.widget.CardView>
     </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-325dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Question"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/question_number"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="/5"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="180dp"


            android:textStyle="bold"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=" Enter the Question"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"


            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card01"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="460dp">

        <LinearLayout
            android:id="@+id/opt1Ans"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/opt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Easy"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card02"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="530dp">
    <LinearLayout
        android:id="@+id/opt2ans"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/opt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Easy"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card03"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="600dp">
<LinearLayout
    android:id="@+id/opt3ans"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/opt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Easy"
            android:textSize="40dp"
            android:textStyle="bold" />
</LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card04"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="670dp">
    <LinearLayout
        android:id="@+id/opt4ans"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/opt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Easy"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>