<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultshow">




    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f84"
        app:cardBackgroundColor="#E91E63"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:backgroundTint="#118"
                app:cardCornerRadius="200dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Congratultion"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-325dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Comlation"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Total Q/5"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="45dp"/>


        <TextView
            android:id="@+id/question"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=" Right Ans"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"


            android:textStyle="bold"/>
        <TextView
            android:id="@+id/question1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=" Wrong Ans"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/right"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="2"
            android:textSize="20dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="0dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wrong"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="3"
            android:textSize="20dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card02"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#E53925"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="530dp">
        <LinearLayout
            android:id="@+id/opt2ans"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Play again"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card03"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#E53925"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="600dp">
        <LinearLayout
            android:id="@+id/opt3ans"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
